<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>学员管理系统</title>
    <link rel="stylesheet" href="../node_modules/bootstrap/dist/css/bootstrap.css">
</head>

<body>
    <div class="container">
        <h2>学员信息列表</h2>
        <div>
            <a href="editor.html" class="btn btn-success glyphicon glyphicon-plus" id="addBtn">添加</a>
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>照片</th>
                    <th>编号</th>
                    <th>姓名</th>
                    <th>性别</th>
                    <th>年龄</th>
                    <th>专业</th>
                    <th>电话</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                <% for(let i=0;i<users.length;i++){%>
                <tr>
                    <td>
                      <img src="<%=users[i].userphoto||'public/default.jpg'%>" width="60">
                    </td>
                    <td><%=users[i].usernumber%></td>
                    <td><%=users[i].username%></td>
                    <td><%=users[i].usersex%></td>
                    <td><%=users[i].userage%></td>
                    <td><%=users[i].usermajor%></td>
                    <td><%=users[i].userphone%></td>
                    <td>
                        <a href="editor.html?usernumber=<%=users[i].usernumber%>"
                            class="btn btn-info glyphicon glyphicon-edit"></a>
                        <button class="btn btn-danger glyphicon glyphicon-trash"
                         onclick="remove('<%=users[i].usernumber%>')"></button>
                    </td>
                </tr>
                <%}%>
    </tbody>
</table>
</div>
</body>
<script src="../public/jquery-1.11.2.min.js"></script>
<script>
function remove(usernumber){
if(confirm('确定要删除吗？')){
    $.post('delete.do',usernumber,function(result){
        if(result==='success'){
            location.reload();
        }else{
            console.log('失败');
        }
    })
}
}
</script>
</html>